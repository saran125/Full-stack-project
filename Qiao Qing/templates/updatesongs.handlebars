<style>

body {
  background-color: black;
}

div.blackblock {
  background-color: black;
  width: 800px;
  height: 358px;
}

.btn#query {
  background-color: black;
  color: gold;
  border: 1px solid white;
}

.btn#query:hover {
  background-color: grey;
  color: white;
}
</style>
<h1 class="display-4">Update Songs</h1>

<form method="POST" action="" name="" enctype="multipart/form-data">
  
  <div class="form-group">
  <h5>Song Image</h5>
  <input type="song_image" name="song_image" class="form-control" value="{{song_image}}" required>
  </div>

  <div class="form-group">
  <h5>Song Name</h5>
  <input type="song_name" name="song_name" class="form-control" value="{{song_name}}" required>
  </div>

  <div class="form-group">
  <h5>Song Age Rating</h5>
  <input type="songagerating" name="songagerating" class="form-control" value="{{songagerating}}" required>
  </div>

  <div class="form-group">
  <h5>Song Duration</h5>
  <input type="songduration" name="songduration" class="form-control" value="{{songduration}}" required>
  </div>

  <div class="form-group">
    <h5>Song Genres</h5>
    <input class="field" id="query" type="submit">
    <br>
    <!-- {{ field }} {{ field.label }} -->
  </div>

  <div class="submit">
    <input class="btn" id="query" type="submit">
  </div>

</form>